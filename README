setenv SCRAM_ARCH slc6_amd64_gcc491
## Create a CMSSW project
scram p CMSSW CMSSW_7_3_0
cd CMSSW_7_3_0/src
cmsenv
## Initialise cmssw git (this will suppress the checking out of files, need to do explicitly)
## Will move to branch from-CMSSW_7_3_0
git cms-init
## add my standalone remote repository and fetch the branches
git remote add cmssw-analysis git@github.com:robervalwalsh/cmssw-analysis.git
git fetch cmssw-analysis
git checkout mssmhbb
git checkout from-CMSSW_7_3_0
git merge mssmhbb
## Add packages (use the git cms command)
git cms-addpkg MssmHbbAnalysis/Ntuplizer
git cms-addpkg MssmHbbAnalysis/TriggerStudies
git cms-addpkg MssmHbbAnalysis/Generator
git cms-addpkg MssmHbbAnalysis/MonteCarloStudies

## The modifications will not be common to mssmhbb and cmssw branches.
## Move to branch mssmhbb to commit changes.
git checkout mssmhbb
## Get any modifications in the remote (= svn update)
git pull cmssw-analysis mssmhbb
## Make local modifications and commit/push as usual
git commit -m  comments  < file>
git push

## Go back to working branch and pull the latest commits
git checkout from-CMSSW_7_3_0
git pull cmssw-analysis mssmhbb
